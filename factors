#include <sys/types.h>
#include <sys/stat.h>
#include <fcntl.h>
#include <unistd.h>
#include <stdlib.h>
#include <stdio.h>
#include <math.h>
#include <string.h>

/**
 * read_textfile- read and sent to stdout a number of chars.
 *
 * @filename: name of file
 * @letters: number of letters
 * Return: Number of printed chars.
 */
int main(int ac, char **av)
{
	/* Declare variables */
	int i, j, flag, fd, h;
	int leido = 0;
	long int number, number2, k;
	char *buf, *buf2;
	int letters = 100;

	/* Ignore unused variables and read input file */
	fd = open(av[1], O_RDONLY);
	buf = malloc(1000 * sizeof(char));
	buf2 = malloc(120 * sizeof(char));
	leido = read(fd, buf, letters);

	/* Loop through input buffer */
	i = 0;
	while (buf[i] != 0)
	{
		/* Reset second buffer */
		j = 0;
		for (h = 0; h <= 100; h++)
			buf2[h] = 0;

		/* Copy number from first buffer to second buffer */
		while (buf[i] != 10)
			 {
				 buf2[j] = buf[i];
				 i++;
				 j++;
			 }

		/* Convert second buffer to number */
		number = atol(buf2);

		/* Check if number is composite */
		flag = 0;
		for (k = 2; k < number /2 && flag == 0; k++)
		{
			if (number % k == 0)
				flag = 1;
		}

		/* Compute and print prime factors */
		number2 = number / (k - 1);
		printf("%li=%li*%li\n", number, number2, k - 1);

		/* Move to next line in first buffer */
		i++;
	}

	/* Free memory and close input file */
	free(buf);
	free(buf2);
	close(fd);

	/* Return success */
	return(0);
}
